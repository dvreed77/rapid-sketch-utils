{
    "entryPoints": [
        "src/geometry/index.ts",
        "src/random/index.ts",
        "src/utils/index.ts",
        "src/drawTools/index.ts"
    ],
    "name": "Sketch Utils",
    "tsconfig": "tsconfig.json", // Ensure this points to your TypeScript configuration file
    "includeVersion": true, // Adds the library version from package.json to the documentation
    "excludePrivate": true, // Excludes private methods from the docs
    "excludeProtected": true, // Excludes protected methods from the docs
    "excludeInternal": true, // Excludes methods marked @internal,
    "entryPointStrategy": "expand",
    "theme": "default",
    "outputs": [
        {
            "name": "html",
            "path": "./docs"
        }
    ],
    "githubPages": true,
    "readme": "none", // Use "none" to avoid overwriting
    "footer": "Visit the repository: [GitHub Repo](https://github.com/dvreed77/rapid-sketch-utils)",
}